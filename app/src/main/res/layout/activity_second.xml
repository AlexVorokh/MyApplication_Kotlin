<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity" android:background="@color/ScreenBackground2">

    <TextView
            android:text="@string/random_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_lable"
            android:textSize="24sp"
            android:textColor="@color/random_heading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_marginTop="24dp"/>
    <TextView
            android:text="R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_random"
            app:layout_constraintTop_toBottomOf="@+id/textView_lable"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="72sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.45"/>
</android.support.constraint.ConstraintLayout>